extends layout

block content
  div(ng-controller='BugListController as bugList')
    md-content
      h1= title
      p Welcome to #{title}
      div(ng-hide='user')
        h1(ng-bind='user')
        input(ng-model='username')
        input(type='password',ng-model='password')
        button(ng-click='bugList.login()') login
      div(ng-show='user')
        button(ng-click='bugList.logout()') logout
      md-toolbar
        div.md-toolbar-tools
          md-button(ng-click='bugList.load()') get zendao bug list
      md-list#buglist
        md-list-item(ng-repeat='bug in bugList.list')
          h1(ng-bind='bug.title')
          a(ng-href='{{bug.href}}',target='_blank') detail
